root = true

[*]
# 设置字符集
charset = utf-8

[*.java]
# 设置缩进为 2 个空格
indent_style = space
indent_size = 2
# 强制使用 UNIX 换行符
end_of_line = lf
# 强制文件结尾添加空行
insert_final_newline = true
# 禁止行尾空格
trim_trailing_whitespace = true
# 强制每行的最大字符数为 100（Google Java Style Guide 推荐的最大行宽）
max_line_length = 100

[*.{yaml,yml,xml}]
# 缩进的空格数
indent_size = 2